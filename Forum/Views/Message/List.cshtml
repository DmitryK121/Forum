@model MessageListViewModel

@foreach (Message message in Model.Messages) {
    <div class="card m-3">
        <div class="card-header">
            <h5 class="text-left">Theme: @message.theme</h5>
        </div>
        <div class="card-body">
            <p class="card-text">@message.content</p>
        </div>
        <div class="card-footer">
            <form asp-action="DeleteMessage" method="post" class="text-right">
                <div class="text-left">
                    Message id: @message.messageId  |   Time: @message.createdTime
                    <button asp-action="DeleteMessage" asp-route-messageId="@message.messageId" type="submit" class="btn btn-danger float-right">
                        Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
}
<div class="text-center m-3">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addMessageModalModal">
        Add Post
    </button>

    <!-- Modal -->
    <form asp-action="AddMessage">
        <div class="modal fade" id="addMessageModalModal" tabindex="-1" aria-labelledby="addMessageModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addMessageModalModal">Post new message</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                    <div class="modal-body">
                        <label>Theme</label>
                        <input asp-for="Message.theme" class="form-control" />
                        <label>Message</label>
                        <textarea asp-for="Message.content" class="form-control" rows="5"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Post</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


